---
import Hamburger from './Hamburger.astro';
import Navigation from './Navigation.astro';
import ThemeIcon from './ThemeIcon.astro';
---
<header>
  <nav class="nav" >
    <Hamburger />
    <Navigation />
    <ThemeIcon />
  </nav>
</header>

<style>


  header {
    padding: 1rem;
  }
  .nav {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  @media screen and (min-width: 636px) {
    header {
      width: 80vw;
      padding: 1rem;
      margin: auto;
    }
    .nav {
      align-items: center;
      display: flex;
    }
  }
</style>