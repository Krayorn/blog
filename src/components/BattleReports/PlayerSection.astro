---
const { name, faction, detachment, list } = Astro.props

---

<div class="flex flex-col" >
    <h3 class="text-center text-lg font-bold mb-2">{name}</h3>
    <h4 class="mb-2">{faction} - {detachment}</h4>

    <div class="flex flex-col space-y-3 mt-3">
        {list.map(unit => {
            return (
                <div>
                    <div class="flex justify-between" >
                        <h5> {unit.number !== undefined && <span class="">{unit.number}</span>} {unit.name}</h5>
                        <p>{unit.points} points</p>
                    </div>
                    {unit.equipment.map(loadout => {
                        return (
                            <p class="text-sm" >{loadout}</p>
                        )
                    })}
                </div>
            )
        })}
        <h4 class="self-end" >Total: {list.reduce((acc, unit) => acc + unit.points, 0)} points</h4>
    </div>
</div>


