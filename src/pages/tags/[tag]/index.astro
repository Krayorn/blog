---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import BlogPost from '../../../components/BlogPost.astro';
import { getPosts, getBattleReports } from '../../../utils/blog';

export async function getStaticPaths() {
  const allPosts = await getPosts();
  const allBattleReports = await getBattleReports();
  const allContent = [...allPosts, ...allBattleReports];
  const uniqueTags = [...new Set(allContent.map((post) => post.data.tags).flat())]

  return uniqueTags.map((tag) => {
    const filteredPosts = allContent.filter((post) => post.data.tags.includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const seoProps = {
  language: "en",
  pageTitle: `Posts tagged: ${tag}`,
  pageDescription: `A list of all the blogs posts tagged "${tag}" present in Krayorn's blog.`
}
const { posts } = Astro.props;
---
<BaseLayout seoProps={seoProps}>
    <p>Posts tagged with {tag}</p>
    <ul>
      {posts.sort((a, b) => b.data.pubDate < a.data.pubDate ? 1 : -1)
      .map((post) => post.collection === 'blog' 
        ? <BlogPost url={`/posts/${post.slug}/`} tags={post.data.tags} title={post.data.title} description={post.data.description} pubDate={post.data.pubDate} /> 
        : <BlogPost url={`/battle_reports/${post.id}/`} tags={post.data.tags} title={post.data.title} description={post.data.description} pubDate={post.data.pubDate} />
      )}
    </ul>
</BaseLayout>