---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';

const pageTitle = "Krayorn's Blog";
const pageDescription = "A blog containing my thoughts and reflections on AI, Software, Board Games and whatever else finds it's way in my mind.";
const seoProps = {
  pageTitle: pageTitle,
  pageDescription: pageDescription,
}

const allPosts = await Astro.glob('../pages/posts/*.md');
---
<BaseLayout seoProps={seoProps}>
<ul>
    {allPosts.filter(post => post.frontmatter.published).map((post) => <BlogPost description={post.frontmatter.description} url={post.url} title={post.frontmatter.title} pubDate={post.frontmatter.pubDate} />)}
</ul>
</BaseLayout>


<style>
  ul {
    list-style-type: none;
    padding: 0;
  }
</style>