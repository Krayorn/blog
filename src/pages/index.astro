---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';

const pageTitle = "Krayorn";
const allPosts = await Astro.glob('../pages/posts/*.md');
---
<BaseLayout pageTitle={pageTitle}>
<ul>
    {allPosts.filter(post => !post.frontmatter.draft).map((post) => <BlogPost description={post.frontmatter.description} url={post.url} title={post.frontmatter.title} pubDate={post.frontmatter.pubDate} />)}
</ul>
</BaseLayout>


<style>
  ul {
    list-style-type: none;
    padding: 0;
  }
</style>